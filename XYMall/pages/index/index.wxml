<view class="pyg_index">
	<!-- 搜索框 开始 -->
	<SearchInput></SearchInput>
	<!-- 搜索框结束 -->

	<!-- 轮播图 开始 -->
	<view class="index_swiper">
		<!-- 
		1 swiper标签存在默认的宽度和高度 100% * 150px
		2 image标签也存在默认的宽度和高度 320px * 240px
		3 设计图片和轮播图
			1 先看一下原图的宽高 750px*340px
			2 让图片的高度自适应，宽度等于 100%
			3 让swiper标签的高度 变成和图片的高一样即可
		4 image标签，
			mode属性渲染模式
				widthFix 让image标签宽高和image标签内容的宽高都等比例的发生变化
	 -->
		<swiper autoplay indicator-dots circular>
			<swiper-item wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="goods_id">
				<navigator url="">
					<image mode="widthFix" src="{{item.image_src}}"></image>
				</navigator>
			</swiper-item>
		</swiper>
	</view>
	<!-- 轮播图结束 -->

	<!-- 分类导航开始 -->
	<view class="index_cate">
		<navigator wx:for="{{catesList}}" wx:for-item="item" wx:for-index="index" wx:key="name" url="">
			<image mode="widthFix" src="{{item.image_src}}"></image>
		</navigator>
	</view>
	<!-- 分类导航结束 -->

	<!-- 楼层开始 -->
	<view class="index_floor">
		<view class="floor_group" wx:for="{{floorList}}" wx:for-item="item1" wx:for-index="index1" wx:key="floor_title">
			<!-- 标题 -->
			<view class="floor_title">
				<image mode="widthFix" src="{{item1.floor_title.image_src}}"></image>
			</view>

			<!-- 内容 -->
			<view class="floor_list">
				<navigator wx:for="{{item1.product_list}}" wx:for-item="item2" wx:for-index="index2" wx:key="name" url="">
				<!--  第一张 widthFix，后面的四张scaleToFill -->
					<image mode="{{(index2===0)?'widthFix': 'scaleToFill'}}" src="{{item2.image_src}}"></image>
				</navigator>
			</view>
		</view>
	</view>
	<!-- 楼层结束 -->

</view>