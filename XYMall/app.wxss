/*
微信小程序不支持通配符
*{
}
*/

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
  主体颜色
  1、less 中 存在变量这个知识
  2、原生的css和wxss中也是支持 变量
*/

page {
  /* 定义主体颜色 */
  --themeColor: #eb4450;
  /* 
   统一字体大小 假设 设计稿大小是 375px
   1px = 2rex;
   14px = 28rpx;
   */
  font-size: 28rpx;
}

image {
  width: 100%;
}

@import "styles/iconfont.wxss";